{
  "apps": {
    "http": {
      "servers": {
        "web": {
          "listen": [":443"],
          "routes": [
            {
              "match": [{ "host": ["www.mtun.io"] }],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "static_response",
                          "headers": {
                            "Location": ["https://mtun.io{http.request.uri}"]
                          },
                          "status_code": 302
                        }
                      ]
                    }
                  ]
                }
              ],
              "terminal": true
            },
            {
              "match": [{ "host": ["mtun.io", "localhost"] }],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [{ "handler": "vars", "root": "/var/www/html" }]
                    },
                    {
                      "handle": [
                        {
                          "handler": "subroute",
                          "routes": [
                            {
                              "handle": [
                                {
                                  "handler": "rewrite",
                                  "uri_substring": [
                                    { "find": "/sfuz", "replace": "/metrics" }
                                  ]
                                }
                              ]
                            },
                            {
                              "handle": [
                                {
                                  "handler": "reverse_proxy",
                                  "upstreams": [{ "dial": "sfu:80" }]
                                }
                              ]
                            }
                          ]
                        }
                      ],
                      "match": [{ "path": ["/sfuz*"] }]
                    },
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "sfu:7000" }]
                        }
                      ],
                      "match": [{ "path": ["/ws"] }]
                    },
                    {
                      "handle": [
                        { "handler": "file_server", "hide": ["./Caddyfile"] }
                      ]
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          { "subjects": ["www.mtun.io", "mtun.io"] },
          { "subjects": ["localhost"], "issuers": [{ "module": "internal" }] }
        ]
      }
    },
    "layer4": {
      "servers": {
        "rtmp": {
          "listen": ["0.0.0.0:1935"],
          "routes": [
            {
              "handle": [
                { "handler": "proxy", "upstreams": [{ "dial": ["rtmp:1935"] }] }
              ]
            }
          ]
        },
        "grpc": {
          "listen": ["0.0.0.0:50051"],
          "routes": [
            {
              "handle": [
                { "handler": "proxy", "upstreams": [{ "dial": ["sfu:50051"] }] }
              ]
            }
          ]
        },
        "rtp:6000": {
          "listen": ["0.0.0.0:6000"],
          "routes": [
            {
              "handle": [
                { "handler": "proxy", "upstreams": [{ "dial": ["rtp:6000"] }] }
              ]
            }
          ]
        },
        "rtp:6001": {
          "listen": ["0.0.0.0:6001"],
          "routes": [
            {
              "handle": [
                { "handler": "proxy", "upstreams": [{ "dial": ["rtp:6001"] }] }
              ]
            }
          ]
        }
      }
    }
  }
}
